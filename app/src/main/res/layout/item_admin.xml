<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:id="@+id/contentAdmin"
    android:background="@drawable/bg_item"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvNameAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_two"
        android:text="الاسم :طارق "
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tvGroupAdmin"
        android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:fontFamily="@font/font_two"
        android:text="الاسم :طارق "
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
         android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey_font"
       />

    <TextView
        android:id="@+id/tvEmailAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_two"
        android:text=" الاميل : tarek"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fontone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/delete"
        android:layout_marginEnd="30dp"
        android:textSize="25sp"
        android:text="@string/delete" />


</LinearLayout>